<%= content_tag :div, id:"contact-content" do %>

  <%= content_tag :div, id:"contact-title" do %>
    <%= content_tag :h1, "Contato" %>
    <%= content_tag :p, "DIGA OI!" %>
  <% end %>

  <%= content_tag :div, class:"separator" do %> <% end %>

  <%= content_tag :div, class:"text-title uppercase" do %> <strong> onde me encontrar </strong> <% end %>

  <%= tag.div id: 'cards' do %>



    <%= tag.div class: 'card' do %>
      <%= content_tag :i, "", class: "fa-solid fa-map-location-dot" %>
      <%= tag.h5 'Endereço' %>

      <%= tag.p '' %>

      <%= tag.p '' do %>
        <%= link_to "https://goo.gl/maps/uGtJAg4DYmCHAGeu6", target: "_blank" do %>
          <%= image_tag("bsb.png", class: "text-icons") %>
            Brasília - DF
